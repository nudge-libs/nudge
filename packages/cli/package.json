{
  "name": "@nudge-ai/cli",
  "version": "0.2.0",
  "description": "CLI for Nudge - generate type-safe prompt files for AI applications",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nudge-libs/nudge.git",
    "directory": "packages/cli"
  },
  "keywords": [
    "ai",
    "llm",
    "prompt",
    "prompt-engineering",
    "typescript",
    "cli",
    "codegen"
  ],
  "bin": {
    "nudge": "./dist/bin.mjs"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "start": "ts-node src/index.ts",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "ink": "^6.6.0",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.2.4",
    "pastel": "^4.0.0",
    "@nudge-ai/core": "0.2.0"
  },
  "peerDependencies": {
    "zod": "^3.23.0 || ^4.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.10",
    "tsdown": "^0.19.0",
    "typescript": "^5.7.0",
    "zod": "^4.3.6"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./dist/index.mjs",
    "./bin": "./dist/bin.mjs",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  }
}
